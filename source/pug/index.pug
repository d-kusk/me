- baseURL = "https://daisukekonishi.com/"
- title = "Daisuke KONISHI"
- description = "Webエンジニア Daisuke KONISHIのページ"
- titleDescription = 'Web Engineer at Osaka'
- copy = `(c) 2018 ${title}`
- asset_path = './dist/'
- image_path = `${asset_path}/image/`

doctype html
html(lang='ja')
  head(prefix='og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#')
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no')
    meta(name="theme-color", content="#29abe2")
    meta(name='format-detection', content='telephone=no')
    title #{title} - #{titleDescription}
    meta(name='description', content=`${description}`)
    meta(property='og:title', content=`${title}`)
    meta(property='og:type', content='website')
    meta(property='og:url', content=`${baseURL}`)
    meta(property='og:image', content=`${baseURL}images/og_image.png`)
    meta(property='og:site_name', content=`${title}`)
    meta(property='og:description', content=`${description}`)
    //- link(href=`${image_path}/favicon.ico`, rel='shortcut icon', type='image/x-icon')
    link(href=`${asset_path}/stylesheet/application.css`, rel='stylesheet')
    include templates/_json-ld

  body

    include templates/_hero
    include templates/_info
    include templates/_work
    include templates/_more
    include templates/_footer

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src=`${asset_path}/javascript/application.js`)
